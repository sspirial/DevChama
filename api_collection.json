{
  "info": {
    "name": "DevChama API",
    "description": "Collection of DevChama API requests" ,
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/register/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"Str0ngP@ss1\",\n  \"password_confirm\": \"Str0ngP@ss1\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Token Obtain",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/token/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "token"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"Str0ngP@ss1\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "My Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/profile/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "profile"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "access_token",
      "value": ""
    }
  ]
}
